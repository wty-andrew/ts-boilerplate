{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "dev:client": "cross-env NODE_ENV=development parcel serve src/client/index.html -p 3001 --open",
    "dev:server": "cross-env NODE_ENV=development nodemon src/server/index.ts",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "build:client": "cross-env NODE_ENV=production parcel build src/client/index.html --dist-dir dist/client",
    "build:server": "cross-env NODE_ENV=production tsc --build",
    "build": "yarn build:server && yarn build:client",
    "test:client": "cross-env NODE_ENV=test jest --selectProjects client",
    "test:server": "cross-env NODE_ENV=test jest --runInBand --selectProjects server",
    "test": "concurrently \"yarn test:client\" \"yarn test:server\"",
    "lint": "eslint src",
    "prebuild": "rimraf dist"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.1",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "parcel": "^2.0.0-beta.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.1",
    "history": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.0-beta.0",
    "regenerator-runtime": "^0.13.7",
    "sanitize.css": "^12.0.1"
  }
}
