{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "An electron app",
  "main": "./build/main/index.js",
  "author": {
    "name": "Andrew",
    "email": "wty.andrew@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron ./build/main/index.js",
    "dev:main": "cross-env NODE_ENV=development tsc-watch --project src/main/tsconfig.json --onSuccess 'electron --remote-debugging-port=9222 ./build/main/index.js'",
    "dev:renderer": "cross-env NODE_ENV=development parcel serve src/renderer/index.html -p 3000 --dist-dir build/renderer",
    "dev": "concurrently \"yarn dev:main\" \"yarn dev:renderer\"",
    "build:main": "cross-env NODE_ENV=production tsc --build",
    "build:renderer": "cross-env NODE_ENV=production parcel build src/renderer/index.html --public-url ./ --dist-dir build/renderer",
    "prebuild": "rimraf build",
    "build": "yarn build:main && yarn build:renderer",
    "test:main": "cross-env NODE_ENV=test jest --selectProjects main",
    "test:renderer": "cross-env NODE_ENV=test jest --selectProjects renderer",
    "test": "concurrently \"yarn test:main\" \"yarn test:renderer\"",
    "lint": "eslint src",
    "prepackage": "rimraf dist",
    "package:linux-x64": "electron-packager . app --ignore '^/(src*|jest*|tsconfig*)' --platform linux --arch x64 --out dist/ --overwrite",
    "deb:x64": "electron-installer-debian --bin app --name app --src dist/app-linux-x64 --dest dist/installers --arch amd64",
    "bundle": "yarn prepackage && yarn package:linux-x64 && yarn deb:x64"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.4.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "parcel": "^2.4.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "regenerator-runtime": "^0.13.9",
    "sanitize.css": "^13.0.0"
  },
  "targets": {
    "main": false
  }
}
